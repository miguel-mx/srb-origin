{% extends 'CcmSrbBundle::layout.html.twig' %}

{% block menu %} {{ knp_menu_render('CcmSrbBundle:Builder:mainMenu') }} {% endblock %}

{% set option = 'Catálogo de Autores' %}

{% block col3 %}
<div class="ym-gbox-right">
  <div class="ym-grid">

<h1>Catálogo de autores</h1>

<table class="records_list">
    <thead >
        <tr>
            <th>Nombre</th>
            <th>Ver Referencias</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><b><a href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.name }}</b></a></td>
            <td>
             <a href="{{ path('author_references', { 'id': entity.id }) }}">Referencias</a>
            </td>
            <td>
                <ul>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('author_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
{% block menuL %}

<ul>
    <li>
        <a href="{{ path('author_new') }}">
            Nuevo Autor
        </a>
    </li>
</ul>

{% endblock %}