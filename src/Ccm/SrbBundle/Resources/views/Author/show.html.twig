{% block menu %} {{ knp_menu_render('CcmSrbBundle:Builder:mainMenu') }} {% endblock %}

{% set option = 'Autor' %}

{% block col3 %}

<div>
<h1>{{ entity.name }}</h1>
<br><b>Id:</b> {{ entity.id }}
<br><br>
